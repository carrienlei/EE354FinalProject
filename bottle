module bottle
    (
        input wire clk, reset,
        input wire [9:0] y_x, y_y,         // current pixel location of yoshi
	    input wire [9:0] x, y,             // current pixel coordinates from vga_sync circuit
	    output wire [9:0] bottle_x, bottle_y,    // output vector for ghost_crazy's x/y position
        output bottle_on,             // on signal: vga pixel within sprite location
        output wire [11:0] rgb_out
    );
   
    // constant declarations
    // max pixel coordinates for VGA display area
    localparam MAX_X = 640;
    localparam MAX_Y = 480;
   
    // Yoshi sprite location regs, pixel location for top left corner
    reg [9:0] s_x_reg, s_y_reg;
    reg [9:0] s_x_next, s_y_next;
   
    // infer registers for sprite location
    always @(posedge clk)
	begin
        s_x_reg     <= s_x_next;
        s_y_reg     <= s_y_next;
        end
   
    // on positive edge of tick signal, or reset, update ghost location 
    always @(posedge tick, posedge reset)
		begin
		//defaults
		s_x_next = s_x_reg;
		s_x_next = s_x_reg;
		
		if(reset)
			s_x_next = 150;  
		else  
			s_x_next <= s_x_next - 1;
		end
				   
    bottleRom bottle (.clk, .row(row), .col(col), .color_data(color_data));
    assign rgb_out = color_data;

    
    wire bottle_on;
    assign bottle_on = (x >= s_x_reg && x < s_x_reg + 16 
		       && y >= s_y_reg && y < s_y_reg + 16)? 1 : 0;
	
    // route x/y location out
    assign bottle_x = s_x_reg;
    assign bottle_y = s_y_reg;
	
endmodule